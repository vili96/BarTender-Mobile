<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/consumation_item"
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <TextView
            android:id="@+id/tv_cocktail_name_consumed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:text="Test Name"
            android:background="#FF333333"
            android:textColor="#FFffffff"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/img_cocktail_consumed"
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:src="@drawable/def_no_image_drink"
            app:srcCompat="@drawable/def_no_image_drink"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="35dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_cocktail_consumed"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/actual_amount"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="@string/total_amount"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/actual_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/total_price"
                android:textSize="16sp"/>
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shadow_border"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnDel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shadow_border"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>